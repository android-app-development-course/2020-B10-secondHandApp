<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/register_titleBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/close"
        />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/register_usernameTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/register_passwdTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_passwdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/register_passwdConfirmText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_passwdConfirmInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请重新输入一次密码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/register_cityText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="城市"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/register_cityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="点击选择城市"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/register_collegeText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="学校"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/register_collegeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="点击选择学校"
            android:textSize="15sp"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/register_majorText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="专业"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_majorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入专业"
            android:clickable="true"
            />
    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:text="注册" />


</LinearLayout>